<!doctype html>
<html lang="en">

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<style>
    .bs-example {
        margin: 70px;
    }

    .Header {
        background-color: greenyellow;
        height: 70px;
    }

    .HeaderText {
        font-size: 30px;
        padding-top: 10px;
        margin-left: 735px;
    }
    .buttonstyle{
        height: 40px;
        margin-top: 10px;
        margin-left: 645px;
    }
</style>
<script type="text/javascript">

    function getConfirmation(Url) {
        var retVal = confirm("Do you want to Delte This");
        if (retVal == true) {

            window.location.href = window.location.href.split('/AllRecords')[0] + Url;
        }
    }

</script>

<body>

    <div class="container-fluid Header d-flex justify-content">
        <h1 class="HeaderText">Result Management System</h1>
        <a href="/" class="btn btn-warning buttonstyle">Logout</a>
    </div>

    <div class="d-flex justify-content-end mt-5">

        <a href="/AddRecords" class="btn btn-success mr-5">ADD records</a>
        <a href="/StudentloginForm" class="btn btn-success ">Search records</a>
    </div>
    </div>
    <table class="table mt-1">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Roll No</th>
                <th scope="col">Name</th>
                <th scope="col">Date Of Birth</th>
                <th scope="col">Score</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>


            <% AllRecords.forEach((article)=> { %>
                <tr>
                    <td>
                        <%= article.RollNo %>
                    </td>
                    <td>
                        <%= article.Name %>
                    </td>
                    <td>
                        <%= article.DateOfBirth %>
                    </td>
                    <td>
                        <%= article.Score %>
                    </td>
                    <td>
                        <a type="button" href='/EditRecord/<%= article.ID %>' class="btn btn-success">Edit</a>
                        <button type="button" class="btn btn-danger"
                            onclick="getConfirmation('/DeleteRecord/<%= article.ID %>')">Delete</button>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</body>

</html>